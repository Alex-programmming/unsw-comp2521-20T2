if (v == C1) {
	do stuff 1
} else if (v == C2) {
	do stuff 2
} else if (v == C3) {
	do stuff 3
} else if (v == C4) {
	do stuff 4
} else {
	do other stuff
}

switch (v) {
case C1: do stuff 1 ; break;
case C2: do stuff 2 ; break;
case C3: do stuff 3 ; break;
case C4: do stuff 4 ; break;
default: do other stuff; break;
}
